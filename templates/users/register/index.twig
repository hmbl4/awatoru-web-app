{% extends "_layout" %}

{% block content %}

{% include '_snippets/header-block' with
    {
      title: "Register",
      description:"Login in to your account"
    }
%}


<div class="row">
  <div class="col s6">
    <form method="post" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{ actionInput('users/save-user') }}
    {{ redirectInput('') }}

    {% macro errorList(errors) %}
        {% if errors %}
            <ul class="errors">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endmacro %}
    <div class="form-group">

      label for="username">Username</label>
      <input id="username" type="text" name="username"
          {%- if user is defined %} value="{{ user.username }}"{% endif -%}>

      {% if user is defined %}
          {{ _self.errorList(user.getErrors('username')) }}
      {% endif %}

    </div>

    <label for="email">Email</label>
    <input id="email" type="text" name="email"
        {%- if user is defined %} value="{{ user.email }}"{% endif %}>

    {% if user is defined %}
        {{ _self.errorList(user.getErrors('email')) }}
    {% endif %}

    <h3><label for="password">Password</label></h3>
    <input id="password" type="password" name="password">

    {% if user is defined %}
        {{ _self.errorList(user.getErrors('password')) }}
    {% endif %}

    <input type="submit" value="Register">
</form>
</div>
</div>

{% endblock %}
