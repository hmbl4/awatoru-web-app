{% extends "_layout" %}

{% block content %}

{% include '_snippets/header-block' with
    {
      title: "Login",
      description:"Login in to your account"
    }
%}


<div class="row">
  <div class="col-sm-12">
    <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        {{ actionInput('users/login') }}

        <div class="form-group">
          <label for="loginName">Username</label>
          <input id="loginName" class="form-control"  type="text" name="loginName" value="{{ craft.app.user.rememberedUsername }}">
          {# <small id="emailHelp" class="form-text text-muted">We'll use the same email to send you updates from us.</small> #}
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" class="form-control" type="password" name="password">
          <label class="text-muted form-text form-text-small">
              <input type="checkbox" name="rememberMe" value="1">
              Remember me
          </label>
        </div>

        {% if errorMessage is defined %}
            <p class="error">{{ errorMessage }}</p>
        {% endif %}

        <div class="d-block d-sm-flex">
          <input type="submit" class="btn btn-purchase" value="Login">
          <a class="btn btn-secondary ml-2" href="{{ url('users/forgotpassword') }}">Forget your password?</a>
        </div>
    </form>
  </div>
</div>

{% endblock %}
